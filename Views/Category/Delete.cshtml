@model ECommerce.Models.Products.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h2>Delete Category</h2>
                </div>
                <div class="card-body">
                    <h4 class="text-center text-warning">Are you sure you want to delete this category?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Category Name</dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.Name)</strong>
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <input type="submit" value="Delete" class="btn btn-danger btn-block" />
                        </div>
                        <div class="text-center mt-3">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
