<style>
    .welcome-container {
        background-color: #1a1a2e;
        padding: 50px 0;
        animation: fadeIn 2s ease-in-out;
    }

    .card {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        color: white;
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* تحسين الحركة */
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* إضافة ظل عند التحويم */
        }

    .card-img-top {
        border-radius: 10px 10px 0 0;
        height: 200px;
        object-fit: cover;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #ff6b6b;
        border-color: #ff6b6b;
    }

        .btn-primary:hover {
            background-color: #ee5253;
            border-color: #ee5253;
        }
</style>
